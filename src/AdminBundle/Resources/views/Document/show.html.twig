{% extends 'AdminBundle::baseadmin.html.twig' %}

{% block body -%}
    <h1>Document</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Keywords</th>
                <td>{{ entity.keywords }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ entity.url }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ entity.body | raw}}</td>
            </tr>
            <tr>
                <th>Isactive</th>
                <td>{{ entity.isactive }}</td>
            </tr>
            <tr>
                <th>Deletable</th>
                <td>{{ entity.deletable }}</td>
            </tr>
            <tr>
                <th>Archieved</th>
                <td>{{ entity.archieved }}</td>
            </tr>
            <tr>
                <th>Contenttitle</th>
                <td>{{ entity.contenttitle }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('page_admin') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('page_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
